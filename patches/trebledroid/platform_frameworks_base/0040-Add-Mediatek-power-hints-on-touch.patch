@@ -585,6 +602,17 @@ public class DisplayPolicy {
                             mService.mPowerManagerInternal.setPowerBoost(
                                     Boost.INTERACTION, duration);
                         }
+                        if(mOldMtkPerf != null) {
+                            try {
+                                android.util.Log.d("PHH-Power", "mtk1 fling power hint");
